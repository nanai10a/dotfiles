# if needs this, notice it depends `extra/xorg-xwayland`
xwayland disable

set $ctl Control
set $sft Shift

set $opt Mod1
set $cmd Mod4

bindsym $cmd+Return	exec sh -e ~/.config/sway/alacritty.sh
bindsym $cmd+q		kill

input "1452:835:Apple_Internal_Keyboard_/_Trackpad" {
	xkb_layout	jp
	xkb_options	caps:none
}

include /etc/sway/config.d/*
